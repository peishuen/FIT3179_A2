{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 850,
  "height": 400,

  "title": {
    "text": "Average State-Level Unemployment During COVID-19 (2020-2021)"
  },

  "projection": { "type": "identity", "reflectY": true },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/malaysia_cea.json",
        "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
      },
      "mark": { "type": "geoshape", "stroke": "#cdced1", "strokeWidth": 0.5, "fill": null }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/malaysia_cea.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/mean_unemployment.csv"
            },
            "key": "state",
            "fields": ["u_rate"]
          }
        },
        {
          "calculate": "datum.u_rate < 2 ? 'Low (Below 2%)' : datum.u_rate < 3 ? 'Lower-Mid (2–2.9%)' : datum.u_rate < 4 ? 'Mid (3–3.9%)' : datum.u_rate < 5 ? 'Upper-Mid (4–4.9%)' : 'High (≥5%)'",
          "as": "u_group"
        },
        {
          "calculate": "format(datum.u_rate, '.2f') + '%'",
          "as": "u_rate_label"
        }
      ],
      "params": [
        {
          "name": "colorSelect",
          "select": {
            "type": "point",
            "fields": ["u_group"],
            "on": "click",
            "clear": "dblclick"
          },
          "bind": "legend"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.6 },
      "encoding": {
        "color": {
          "condition": {
            "param": "colorSelect",
            "field": "u_group",
            "type": "nominal",
            "scale": {
              "domain": [
                "Low (Below 2%)",
                "Lower-Mid (2–2.9%)",
                "Mid (3–3.9%)",
                "Upper-Mid (4–4.9%)",
                "High (≥5%)"
              ],
              "range": [
                "#d4eeff",
                "#9ccafc",
                "#5aa2f5",
                "#276ec9",
                "#08306b"
              ]
            },
            "legend": {
              "title": "Unemployment Category",
              "offset": -50
            }
          },
          "value": "#d3d3d3"
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "u_rate_label", "title": "Unemployment Rate" },
          { "field": "u_group", "title": "Category" }
        ]
      }
    }
  ],

  "config": {
    "title": {
      "fontSize": 25,
      "fontWeight": 700,
      "anchor": "middle",
      "color": "#5c5c5c"
    },
    "legend": {
      "labelColor": "#646464",
      "titleColor": "#646464",
      "symbolType": "square",    
      "titleFontSize": 16,  
      "titlePadding": 8,
      "labelFontSize": 15,
      "orient": "bottom-left",
      "symbolSize": 250,           
      "titleLimit": 200,
      "direction": "horizontal"
    },
    "view": { "stroke": null }
  }
}