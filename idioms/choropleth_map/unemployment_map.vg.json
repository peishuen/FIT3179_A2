{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 830,
  "height": 400,

  "title": {
    "text": "Unemployment Rate by State in Malaysia",
    "dy": 30
  },

  "projection": { "type": "identity", "reflectY": true },

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/malaysia_cea.json",
        "format": { "type": "topojson", "feature": "ne_10m_graticules_1" }
      },
      "mark": { "type": "geoshape", "stroke": "#cdced1", "strokeWidth": 0.5, "fill": null }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/malaysia_cea.json",
        "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/peishuen/FIT3179_A2/main/idioms/choropleth_map/mean_unemployment.csv"
            },
            "key": "state",
            "fields": ["u_rate"]
          }
        },
        {
          "calculate": "format(datum.u_rate, '.2f') + '%'",
          "as": "u_rate_label"
        }
      ],
      "mark": { "type": "geoshape", "stroke": "white", "strokeWidth": 0.6 },
      "encoding": {
        "color": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)",
          "scale": {
            "type": "threshold",
            "domain": [2, 3, 4, 5],
            "range": [
              "#d4eeff",
              "#9ccafc",
              "#5aa2f5",
              "#276ec9",
              "#08306b"
            ]
          },
          "legend": {
            "orient": "right",
            "titleFontSize": 11,
            "labelFontSize": 10,
            "gradientLength": 180,
            "gradientThickness": 25
          }
        },
        "tooltip": [
          { "field": "properties.name", "title": "State" },
          { "field": "u_rate_label", "type": "nominal", "title": "Unemployment Rate" }
        ]
      }
    }
  ],

  "config": {
    "title": { "anchor": "middle", "fontSize": 18, "baseline": "top" },
    "view": { "stroke": null }
  }
}
